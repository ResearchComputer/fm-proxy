---
interface Props {
  name: string;
  role: string;
  avatar: string;
  url?: string;
}

const { name, role, avatar, url } = Astro.props;
---

<div class="flex flex-col items-center gap-3 p-4 rounded-lg border-black/15 dark:border-white/20 hover:bg-black/5 dark:hover:bg-white/5 transition-colors duration-300 ease-in-out">
  <img 
    src={avatar} 
    alt={`${name}'s avatar`} 
    class="w-16 h-16 rounded-full object-cover border-black/10 dark:border-white/10"
  />
  <div class="flex flex-col items-center text-center">
    {url ? (
      <a 
        href={url} 
        target="_blank" 
        rel="noopener noreferrer" 
        class="font-medium text-black dark:text-white hover:underline"
      >
        {name}
      </a>
    ) : (
      <span class="font-medium text-black dark:text-white">{name}</span>
    )}
    <span class="text-sm text-gray-600 dark:text-gray-400">{role}</span>
  </div>
</div> 